@model NHS.Common.DTO.clsCOVIDDetails

@{
    /**/

    ViewBag.Title = "Patient details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .square {
        height: 30px;
        width: 100px;
        background-color: forestgreen;
    }
</style>
<br />
<br />
<div class="container">
    <div class="row form-group">
        <div class="col-xs-12 col-lg-12">
            <div class="row" align="right">
                <div class="col-md-12">
                    <input type="image" src="~/images/Delete.png" width="30" height="30" alt="Submit" id="btnClose1" title="Close" />
                </div>
            </div>            
        </div>
    </div>
    <div class="row setup-content" id="step-1">
        <div class="col-xs-12 col-lg-12">
            <div class="lable_title">
                <h2>Patient Profile</h2>
            </div>
<div class="" style="margin:10px 0 20px 0;">		
<div class="row">
<div class="col-xs-12 col-lg-5">

<table width="100%" border="0" cellspacing="0" cellpadding="0" class="ds_table2">
  <tr>
    <td width="60%"><b>Patient ID</b> </td>
    <td width="40%">@Model.PatientID</td>
  </tr>
    <tr>
        <td width="50%"><b>Patient Name</b> </td>
        <td width="50%">@Model.PatientName</td>
    </tr>
    <tr>
        <td><b>Gender</b> </td>
        <td>@Model.Gender</td>
    </tr>
  <tr>
    <td><b>Age</b> </td>
    <td>@Model.Age</td>
  </tr>
    <tr>
        <td><b>Spell Number</b> </td>
        <td>@Model.SpellNumber</td>
    </tr>
    <tr>
        <td><b>Admission Status</b> </td>
        <td>@Model.AdmissionStatus</td>
    </tr>
    <tr>
        <td><b>Date of Admission</b> </td>
        <td>@Model.AdmissionDateTime</td>
    </tr>
  <tr>
    <td><b>Ward (on admission)</b> </td>
    <td>@Model.AdmittingWard</td>
  </tr>
    <tr>
        <td><b>Date of Discharge</b> </td>
        @if (Model.DischargeDateTime != "01/01/0001")
        {
            <td>@Model.DischargeDateTime</td>
        }
        else
        {
            <td>&nbsp;</td>
        }
    </tr>  
  <tr>
    <td><b>Date of Death</b> </td>
    <td>@Model.DateofDeath</td>
  </tr>
    <tr>
        <td><b>Discharge Ward</b> </td>
        <td>@Model.DischargeWard</td>
    </tr>
</table>
</div>
<div class="col-xs-12 col-lg-5">
<table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin:10 0 0 0;" class="ds_table2">
    <tr>
        <td><b>Number of Tests</b> </td>
        <td>@Model.NumberOfTests</td>
    </tr>
    <tr>
        <td><b>Test Status</b> </td>
        <td>@Model.TestStatus</td>
    </tr>
    <tr>
        <td><b>Ordered By</b> </td>
        <td>@Model.OrderedBy</td>
    </tr>
    <tr>
        <td><b>Test Order DateTime</b> </td>
        <td>@Model.OrderDateTime</td>
    </tr>
    <tr>
        <td><b>Test Duration</b> </td>
        @if (Model.TestDuration > 2)
        {
            <td style="color:red">@Model.TestDuration.ToString() days</td>
        }
        else
        {
            <td>@Model.TestDuration.ToString() days</td>
        }
    </tr>
    <tr>
        <td><b>Test Result DateTime</b> </td>
        @if (string.IsNullOrEmpty(Model.TestResultDateTime))
        {
            <td>Pending</td>
        }
        else
        {
            <td>@Model.TestResultDateTime</td>
        }        
    </tr>
    <tr>
    <td><b>Test Order Location</b> </td>
    <td>@Model.TestOrderLocation</td>
    </tr>
    <tr>
        <td><b>Test Result</b> </td>
        <td>@Model.TestResult</td>
    </tr>
    <tr>
<tr>
        <td><b>Patient Last Location</b> </td>
        <td>@Model.LastPatientLocation</td>
</tr>    
  <tr>
    <td><b>Bed Type</b> </td>
    <td>@Model.BedType</td>
  </tr>
  <tr>
    <td><b>Breathing Status</b> </td>
    <td>@Model.BreathingStatus</td>
  </tr>

</table>
</div>
<div class="col-xs-12 col-lg-2">
<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td height="10">&nbsp;</td>
  </tr>
  <tr>
    <td>
        @if (Model.Gender.Trim().ToUpper() == "FEMALE" || Model.Gender.Trim().ToUpper().IndexOf("FEMALE") > 0)
        {
            <img src="~/images/femaleuser.jpg?v=1.1" />
        }
        else
        {
            <img src="~/images/user.png?v=1.1" />
        }
    </td>

  </tr>
   <tr>
   
	<td class="card-body" style="padding:20px 0 0 12px;">
<a style="color:blue !important;" href="javascript:var x=window.open(@ViewBag.PatientHistoryLink);" data-toggle="tooltip" title="Click here to view entire patient history" >Patient History</a>

	</td>
  </tr>
</table>

</div>
</div>
</div>



    </div>
    <br />
    <br />

</div>

<div class="modal fade" id="modelClose1">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Message</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">

                <div class="form-section" style="text-align:left">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row_bar">
                                <div>Do you want to exit without saving your changes?</div>
                            </div>
                        </div>


                        @*<div class="col-md-12">
                                <div class="row_bar">
                                    <div><input type="checkbox" id="QAPReview" name="QAPReview" checked disabled="disabled"><span>Review Completed?</span>?</div>
                                </div>
                            </div>*@
                        <br />
                        <br />
                        <div class="col-md-4">
                            <button type="button" class="btn btn-primary btn-block" id="btnModelClose1" data-dismiss="modal" formmethod="post" onclick="location.href='@Url.Action("COVIDReviewCycle", "Home", new { id=Model.ID, patientID = Model.PatientID })'">Yes</button>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary btn-block" name="btnCloseYes" id="btnCloseYes">No</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
