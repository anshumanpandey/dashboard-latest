@model NHS.Common.Consultant
@{
    ViewBag.Title = "Edit Clinician";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br /><br /><br />
<div class="container">
    <form action="@Url.Action("UpdateConsultant", "Home", new { id = Model.ConsID} )" id="login-form" class="sky-form" method="post" novalidate="novalidate">
        <div class="lable_title">
            <h2>Edit Clinician</h2><span style="color:red"><i>&nbsp;&nbsp;* marked fields are mandatory fields.</i></span><br />
        </div>
        <fieldset>
            <section>
                <div class="row">
                    <div class="col-md-4">
                        <span>Email ID</span>&nbsp;&nbsp;<span style="color:red;font-size:20px">*</span>
                    </div>
                    <div class="col-md-5">
                        <div class="row_bar checkbox-row">
                            @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control", @id = "EmailID" } })
                        </div>
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <div class="col-md-4">
                        <span>First Name</span>&nbsp;&nbsp;<span style="color:red;font-size:20px">*</span>
                    </div>
                    <div class="col-md-5">
                        <div class="row_bar checkbox-row">
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @id="FirstName" } })
                        </div>
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <div class="col-md-4">
                        <span>Last Name</span>&nbsp;&nbsp;<span style="color:red;font-size:20px">*</span>
                    </div>
                    <div class="col-md-5">
                        <div class="row_bar checkbox-row">
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @id = "LastName" } })
                        </div>
                    </div>
                </div>
            </section>
            
            <section>
                <div class="row">
                    <div class="col-md-4">
                        <span>GMC Code (If Applicable)</span>
                    </div>
                    <div class="col-md-5">
                        <div class="row_bar checkbox-row">
                            @Html.EditorFor(model => model.GMCCode, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </section>
        </fieldset>
        <div class="col-md-12" align="center">
            <button id="activate-step-2" type="submit" name="BtnFinish" class="btn btn-primary btn-lg">Submit</button>
            <button id="activate-step-3" type="button" name="BtnCancel" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("FeedbackType","Home")'">Cancel</button>
        </div>
    </form>
</div>
<script>
    $(document).ready(function () {
        $("#activate-step-2").click(function () {
            if ($.trim($("#FirstName").val()) == "") {
                alert("First Name is a mandatory field.");
                return false;

            }
        });
        $("#activate-step-2").click(function () {
            if ($.trim($("#LastName").val()) == "") {
                alert("Last Name is a mandatory field.");
                return false;

            }
        });
        $("#activate-step-2").click(function () {
            if ($.trim($("#EmailID").val()) == "") {
                alert("Email ID is a mandatory field.");
                return false;

            }
        });
    });
</script>

