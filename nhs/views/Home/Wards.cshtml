@model List<NHS.Common.Wards>
@{
    ViewBag.Title = "Add New Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .form-control:disabled, .form-control[readonly] {
        background-color: #fdfdfd;
        opacity: 1;
    }
</style>
<br />
<br />
<div align="left" style="width:90%">
    <h4>Wards</h4>
</div>
<span style="color:green">@TempData["AlertMessage"]</span>
<div class="col-sm-12">
    <div align="right" style="width:90%">
        <a href='@Url.Action("AddWard", "Home")'>Add New Ward</a>
    </div>
    <br />
    <div class="row">
        <div style="width:90%;">
            <table class="stripe row-border order-column" style="overflow:auto;width:100% !important" id="tblWards">
                <thead>
                    <tr bgcolor="#a9d7cc" style="color:black;  font-size:12px;">
                        <th align="left" width="40%">Ward Code</th>
                        <th align="left" width="40%">Ward Name</th>
                        <th align="left" width="10%">Action</th>
                    </tr>
                </thead>
                <tbody style="font-size:12px;padding:0px;">
                    @if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr class="Entries">
                                <td align="left" width="20%">&nbsp;&nbsp;@item.WardCode</td>
                                <td align="left" width="20%">&nbsp;&nbsp;@item.WardName</td>
                                <td width="10%" align="left">&nbsp;&nbsp;<a href="@Url.Action("EditWard", "Home", new { id = item.WardID })"><i class="fas fa-edit"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="@Url.Action("DeleteWard", "Home", new { id = item.WardID })"><i class="fas fa-trash-alt"></i></a></td>

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="14" class="text-center" align="center">No Records Found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
        $(document).ready(function () {
            $('#tblWards').DataTable(
                {
                    "ordering": true,
                    "paging": true,
                    "searching": true,
                    "pageLength": 10,
                    "order": [[1, "desc"]],
                    "aoColumns": [
                        { "sName": "WardCode", "sTitle": "Ward Code", "bSortable": "true" },
                        { "sName": "WardName", "sTitle": "Ward Name", "bSortable": "true" },
                        { "sName": "Action", "sTitle": "Action", "bSortable": "false" }
                    ],
                    "lengthMenu": [
                        [10, 20, 50, 100, -1],
                        ['10 rows', '20 rows', '50 rows', '100 rows', 'Show all']],
                    "scrollX": true,
                });
        });
</script>


